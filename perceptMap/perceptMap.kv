#:kivy 1.0
#:import kivy kivy

<ImageProperties@CustomImage>
    keep_data: True
    nocache: False
    id: 'image'
    size: self.texture_size

<LabelCheckBox@LabelCheckResponse>:
    check_pos: "left"
    font_size: 20
    yshift: 25

    canvas:
        Clear

        Color:
            rgb: 1, 1, 1

        Rectangle:
            texture: self.texture
            size: self.texture_size
            pos: int(self.center_x - self.texture_size[0] / 2.), int(self.center_y - self.texture_size[1] / 2.)

        Rectangle:
            source: 'atlas://data/images/defaulttheme/checkbox%s%s_%s' % (('_radio' if self.group else ''), ('_disabled' if self.disabled else ''), ('on' if self.active else 'off'))
            size: sp(50), sp(50)
            pos: int(self.x  if self.check_pos == 'left' else self.x + self.width -sp(32)), int(self.center_y - sp(self.yshift))

<LabelCheckBox2@LabelCheckResponse>:
    check_pos: "bottom"
    font_size: 20
    yshift: 25

    canvas:
        Clear

        Color:
            rgb: 1, 1, 1

        Rectangle:
            texture: self.texture
            size: self.texture_size
            pos: int(self.center_x - self.texture_size[0]/2 ), int(self.center_y + self.texture_size[1]*0.6)

        Rectangle:
            source: 'atlas://data/images/defaulttheme/checkbox%s%s_%s' % (('_radio' if self.group else ''), ('_disabled' if self.disabled else ''), ('on' if self.active else 'off'))
            size: sp(50), sp(50)
            pos: int(self.center_x-25), int(self.y)

<Separator@Widget>:
    id: separator
    size_hint_y: None
    height: 1
    canvas:
        Color:
            rgb: 1., 0., 0.
        Rectangle:
            pos: 0, separator.center_y
            size: separator.width, 2

<UserResponse>:
